---
import "@fontsource-variable/source-serif-4";
import "../styles/global.css";

const { pageTitle = "Jimmy Li" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="author" content="Jimmy Li" />
    <meta
      name="description"
      content="Hey, I'm Jimmy! Welcome to my personal website."
    />
    <meta
      name="keywords"
      content="jimmy li, cybersecurity, ctfs, jimmy li security"
    />
    <meta name="og:title" content={pageTitle} />
    <meta
      name="og:description"
      content="Hey, I'm Jimmy! Welcome to my personal website."
    />
    <title>{pageTitle}</title>
  </head>
  <body class="flex min-h-screen flex-col">
    <main class="grow">
      <div class="container mx-auto max-w-[760px] px-6 py-12">
        <slot />
      </div>
    </main>
    <footer class="w-full">
      <hr class="border-t border-gray-100" />
      <div class="container mx-auto max-w-[760px] px-6 pt-4 pb-8">
        <div class="flex flex-col gap-4 text-gray-600">
          <p>Jimmy Li</p>
          <nav class="flex flex-wrap gap-x-6 gap-y-2">
            <a
              href="https://www.linkedin.com/in/jimmy-li1/"
              class="text-gray-900 underline decoration-gray-300 underline-offset-4 hover:decoration-gray-900"
              >linkedin</a
            >
            <a
              href="https://twitter.com/jimfutsu"
              class="text-gray-900 underline decoration-gray-300 underline-offset-4 hover:decoration-gray-900"
              >twitter</a
            >
            <a
              href="https://github.com/jimmyl02"
              class="text-gray-900 underline decoration-gray-300 underline-offset-4 hover:decoration-gray-900"
              >github</a
            >
            <a
              href="mailto:me@jimmyli.us"
              class="text-gray-900 underline decoration-gray-300 underline-offset-4 hover:decoration-gray-900"
              >email</a
            >
          </nav>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
    background-color: #fff;
    color: #1a1a1a;
    -webkit-font-smoothing: antialiased;
  }
</style>
